<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <Env.MAVEN_OPTS>-Djansi.passthrough=true</Env.MAVEN_OPTS>
                
                <exec.args>-Dlog4j.configurationFile='./log4j2.xml' -classpath %classpath com.chigix.resserver.Application</exec.args>
                <exec.executable>java</exec.executable>
                
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <Env.MAVEN_OPTS>-Djansi.passthrough=true</Env.MAVEN_OPTS>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Dlog4j.configurationFile='./log4j2.xml' -classpath %classpath com.chigix.resserver.Application</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Dlog4j.configurationFile='./log4j2.xml' -classpath %classpath com.chigix.resserver.Application</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>test.single</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>test-compile</goal>
                <goal>surefire:test</goal>
            </goals>
            <properties>
                
                <test>${packageClassName}</test>
                
                <Env.MAVEN_OPTS>"-Djansi.passthrough=true"</Env.MAVEN_OPTS>
                
                
            </properties>
        </action>
    </actions>
